@require '../../common/styles/global-variables.styl'

.popup
  display: none
  position: absolute
  top: 0
  left: 0
  z-index: 4
  size(100%)

  &--opened
    display: block

  &__bg
    position: absolute
    top: 0
    left: 0
    size(100%)
    background-color: alpha($main-shaft, 0.8)

  &__content
    position: relative
    top: 150px
    margin: auto
    size(80%, auto)

  &__form
    margin auto
    display: flex
    flex-direction: column
    justify-content: center
    align-items: center
    padding: $default-offset * 4 $default-offset * 2
    background-color: $white
    border-radius: 25px

  &__form-title
    margin-bottom: $default-offset * 3
    text-align: center
    font-size: 22px
    @media(min-width: $small)
      font-size: 32px

  &__label
    margin 0 auto $default-offset * 1.5
    max-width: 270px
    position: relative
    width: 100%
    display: flex
    flex-direction: column
    align-items: flex-start

  &__input
    margin-top: $default-offset * .3
    padding: 0 $default-offset * 2
    color: $gray
    border: 1px solid $cornflower-blue
    border-radius: 25px
    width: 100%
    height: 48px
    font-size: 16px
    line-height: 48px

  &__input-descr
    color: $gray
    font-size: 14px

  &__button
    margin-top: $default-offset * 2
    padding: $default-offset 0
    border-radius: 32px
    width: 100%
    max-width: 270px
    @media(min-width: $small)
      width: 270px


  &--phone
    overflow-y hidden