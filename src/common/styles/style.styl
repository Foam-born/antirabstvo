@require 'global-variables.styl'

/* == COMMON STYLES == */

*
  box-sizing: border-box

html
  width: 100vw
  overflow-x: hidden
body
  width: 100vw
  font-family: $font-family-general
  color: $main-shaft

  &::-webkit-scrollbar
    width: 10px

  &::-webkit-scrollbar-thumb
    background-color: $red
    border-radius: 20px
    -webkit-box-shadow: inset 0 0 6px rgba(0,0,0,0.5)
//outline: 1px solid $firefly

section, header, footer, aside, article, main
  display: block

ul
  margin: 0
  padding: 0

button
  outline: none
  border: none
  &:focus
    outline: none

a
  color: $main-shaft
  text-decoration: none
  &:visited
    color: $main-shaft
  &:hover
    text-decoration: none
    color: $main-shaft

input
  &:focus
    outline: none
